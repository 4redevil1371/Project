<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="270dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tenNguoiNhanDaGiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10pt"
        />

    <TextView
        android:id="@+id/tv_sdtNhanDaGiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10pt"
        />


    <TextView
        android:id="@+id/tv_diaChiNhanHangDaGiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10pt"
        />

    <TextView
        android:id="@+id/tv_chuThichNhanHangDaGiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10pt"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ngayDaGiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/12/2020"
                android:textSize="10pt"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:text="24:59"
                android:id="@+id/tv_gioDaGiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_xoaHoaDonDaGiao"
        android:layout_width="41dp"
        android:layout_height="match_parent"
        android:src="@drawable/delete_icon" />
</LinearLayout>




