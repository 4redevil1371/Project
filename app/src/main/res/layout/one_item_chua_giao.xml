<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tenNguoiNhanHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/tv_sdtNhanHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10pt"
            />


        <TextView
            android:id="@+id/tv_diaChiNhanHangHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/tv_chuThichNhanHangHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10pt"
            />
        <TextView
            android:id="@+id/tv_tongThanhToanChuaGiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
            android:id="@+id/tv_ngayDatHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/12/2020"
            android:textSize="10pt"
            />
            <TextView
                android:text="24:59"
                android:id="@+id/tv_gioDatHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_call"
        android:layout_width="39dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_call" />



</LinearLayout>