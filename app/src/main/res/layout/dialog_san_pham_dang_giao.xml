<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d2495054"
        android:fontFamily="@font/robotocondensedregular"
        android:gravity="center"
        android:padding="16dp"
        android:text="Sản phẩm đơn hàng"
        android:textColor="#e3e8ea"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/lv_sanPhamDangGiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_xacNhanDaGiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐÃ GIAO"
            android:textColor="#E5E5E5"
            android:padding="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/robotocondensedregular"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#00AB67"/>

        <TextView
            android:id="@+id/tv_huyDonHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E5E5E5"
            android:padding="16dp"
            android:text="HỦY ĐƠN HÀNG"
            android:layout_weight="1"
            android:fontFamily="@font/robotocondensedregular"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#e74d4d"/>

    </LinearLayout>

</LinearLayout>