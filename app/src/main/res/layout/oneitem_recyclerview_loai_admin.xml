<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="26dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_height="65dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="#EBEEF3"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="0dp"
    app:cardElevation="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/khung_loai"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHinhLoaiAdmin"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="12dp">

            <TextView
                android:id="@+id/tvTenLoaiAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/robotocondensedregular"
                android:padding="4dp"
                android:text="Tên loại"
                android:textColor="#2b3d41"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivMenuLoaiAdmin"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivMenuLoaiAdmin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:onClick="menuLoai"
                android:src="@drawable/moresanpham_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.482" />

            <TextView
                android:id="@+id/tvMaLoaiAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/robotocondensedregular"
                android:padding="4dp"
                android:text="Mã loại :"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/tvTenLoaiAdmin"
                app:layout_constraintEnd_toStartOf="@+id/ivMenuLoaiAdmin"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>