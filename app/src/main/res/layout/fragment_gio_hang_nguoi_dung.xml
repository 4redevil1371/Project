<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgiohang"
    tools:context=".NguoiDungFragment.GioHangNguoiDungFragment"
    android:id="@+id/frame_container_gioHang">

    <android.support.constraint.ConstraintLayout
        android:background="@drawable/top_giohang"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="84dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/unicaoneregular"
            android:padding="8dp"
            android:textColor="#191d48"
            android:text="Thank you for choosing us!"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSanPhamGioHang"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginTop="-50dp">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/bt_thanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_thanhtoan"
        android:elevation="6dp"
        android:fontFamily="@font/robotocondensedregular"
        android:padding="6dp"
        android:text="Thanh toÃ¡n"
        android:textColor="#191d48"
        android:textSize="16sp" />
</LinearLayout>